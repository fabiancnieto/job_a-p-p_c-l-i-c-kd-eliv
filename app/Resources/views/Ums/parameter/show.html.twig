{% extends 'base.html.twig' %}

{% block body %}
    <h1>Parameter</h1>

    <table>
        <tbody>
            <tr>
                <th>Parid</th>
                <td>{{ parameter.parId }}</td>
            </tr>
            <tr>
                <th>Parstringvalue</th>
                <td>{{ parameter.parStringValue }}</td>
            </tr>
            <tr>
                <th>Parnumericvalue</th>
                <td>{{ parameter.parNumericValue }}</td>
            </tr>
            <tr>
                <th>Parstate</th>
                <td>{{ parameter.parState }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('parameter_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('parameter_edit', { 'parId': parameter.parId }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
