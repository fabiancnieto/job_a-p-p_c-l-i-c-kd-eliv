{% extends 'base.html.twig' %}

{% block body %}
{% block headtitle %}Users List{% endblock %}
    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>State</th>
                <th>Profile</th>
                <th>Read Privilege</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.usrFullName }}</td>
                <td>{{ user.usrEmail }}</td>
                <td>{{ user.usrPhoneNumber }}</td>
                <td>{% if user.usrState %}Active{% else %}Inactive{% endif %}</td>
                <td>{{ user.pru.pruName }}</td>
                <td>{% if user.usrGrantList %}Yes{% else %}No{% endif %}</td>
                <td>{% if user.usrCreationDate %}{{ user.usrCreationDate|date('Y-m-d') }}{% endif %}</td>
                <td><a class="btn btn-info" href="{{ path('Ums_edit', { 'usrId': user.usrId }) }}">Edit</a></td>
                <td><a class="btn btn-danger" href="{{ path('Ums_delete', { 'usrId': user.usrId }) }}">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-success" href="{{ path('Ums_new') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
